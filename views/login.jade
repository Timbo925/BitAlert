html.bg-black
  head
    meta(charset="UTF-8")
    title BitAlert | Log in
    meta(content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", name="viewport")
    link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css", rel="stylesheet", type="text/css")
    link(href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css", rel="stylesheet", type="text/css")
    link(href="../../css/AdminLTE.css", rel="stylesheet", type="text/css")
  body.bg-black
    #login-box.form-box
      .header Sign In
      form(action="/login", method="post")
        .body.bg-gray
          .form-group
            input.form-control(type="text", name="username", placeholder="User ID", style="background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;")
          .form-group
            input.form-control(type="password", name="password", placeholder="Password", style="background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;")
          .form-group
            input(type="checkbox", name="remember_me")
            | Remember me
        .footer
          button.btn.bg-olive.btn-block(type="submit") Sign me in
          p
            a(href="#") I forgot my password
          a.text-center(href="register.html") Register a new membership
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js", type="text/javascript")
    script#hiddenlpsubmitdiv(style="display: none;")
    
