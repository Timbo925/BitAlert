extends ./layout_user.jade
include ./components/address_list.jade
block content
  // Right side column. Contains the navbar and content of the page
  aside.right-side
    // Content Header (Page header)
    section.content-header
      h1
        | Dashboard
        small Overview of all your addresses
    // Main content
    section.content
      .row
        .col-lg-3.col-lg-push-9.col-sm-12
          .col-lg-12.col-sm-6
            .small-box.bg-yellow
              .inner
                h3=data.balanceSat/100
                p Bits Balance
              .icon
                i.fa.fa-btc
              a.small-box-footer(href="#")
                | More info
                i.fa.fa-arrow-circle-right
          .col-lg-12.col-sm-6
            .small-box.bg-green
              .inner
                h3=data.txApperances
                  
                p Number of Transactions
              .icon
                i.fa.fa-btc
              a.small-box-footer(href="#")
                | More info
                i.fa.fa-arrow-circle-right
        .col-lg-9.col-lg-pull-3.col-sm-12
          +addressList(data.list)
          

    // /.content
  // /.right-side
  
block scripts
  script(src="../../js/plugins/datatables/jquery.dataTables.js", type="text/javascript")
  script(src="../../js/plugins/datatables/dataTables.bootstrap.js", type="text/javascript")
  script(type="text/javascript").
    $(function() {
      $('#example1').dataTable();
    
    });
