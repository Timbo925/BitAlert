extends ./layout_user.jade


block content
  // Right side column. Contains the navbar and content of the page
  aside.right-side
    // Content Header (Page header)
    section.content-header
      h1
        | Address Management
        small Manage your bitcoin addresses
    // Main content
    section.content
      .row
        .col-md-12
          +singleAddress(data.addrSingles)           
        .col-md-12
          +xpubAddress(data.xpubList)
        .col-md-6
          +AddSingle()
        .col-md-6
          +AddXpub()
    // /.content
  // /.right-side
  
block scripts
  script(src="/js/plugins/datatables/jquery.dataTables.js", type="text/javascript")
  script(src="/js/plugins/datatables/dataTables.bootstrap.js", type="text/javascript")
  include ./components/single_address.jade
  include ./components/xpub_address.jade
  include ./components/add_single_address.jade
  include ./components/add_xpub_address.jade
  script(type="text/javascript").
    $(function() {
      $('#single').dataTable();
      $('#xpub').dataTable();
    });
